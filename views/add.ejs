<%- include("partials/header") -%>

<div id = "inputForm">

<form class="" action="/add" method="post">

  <div class="form-group">

    <div id="taskName">
      <label>Name</label>
      <input type="text" name = "title" class="form-control"  placeholder="Enter the task name (Max 20 characters)" maxlength="20">
    </div>

    <div id="taskDescription">
      <label for="form7">Description</label>
      <textarea name = "description" class="md-textarea form-control" rows="7" placeholder="Enter the task description"></textarea>
    </div>


    <button id = "status-btn" type="submit" class="btn btn-primary">Add</button>
  </div>


</form>

</div>

